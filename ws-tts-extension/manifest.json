{
  "manifest_version": 3,
  "name": "WebSocket TTS Extension",
  "version": "1.0",
  "description": "Receive text from WebSocket server and perform TTS",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
